# use separate file for username / email / github token / etc
[include]
  path = ~/.dotfiles/git/.gitconfig.local

[includeIf "gitdir:~/Code/projects/work/etna"]
  path = ~/Code/projects/work/etna/.gitconfig
[core]
  editor = code --wait
  excludesfile = ~/.gitignore_global
  autocrlf = input

[init]
  defaultBranch = main

# [branch "main"]
#   remote = origin
#   merge = refs/heads/main

[alias]
  l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  h = log --graph --decorate --abbrev-commit --date=relative --oneline --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)'
  ec = config --global -e

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

# [push]
#   default = simple

# [merge]
#   log = true

# [credential]
# helper = osxkeychain

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process

[commit]
  template = /Users/mac/.stCommitMsg

[diff]
  tool = vscode

[difftool "vscode"]
  cmd = code --wait --diff \"$LOCAL\" \"$REMOTE\"

[merge]
  tool = vscode

[mergetool "vscode"]
  cmd = code --wait \"$MERGED\"
  trustExitCode = true

