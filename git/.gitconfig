# use separate file for username / email / github token / etc
[include]
  path = ~/.dotfiles/git/.gitconfig.local

[includeIf "gitdir:~/Code/projects/work/etna/"]
  path = ~/Code/projects/work/etna/.gitconfig

[core]
  editor = code --wait
  # pager = less -RFX
  pager = delta
  excludesfile = ~/.gitignore_global
  autocrlf = input

[delta]
  syntax-theme = dracula
  line-numbers = true

# REuse REcorded REsolution
[rerere]
  enabled = true

[init]
  defaultBranch = main

[branch]
  sort = -committerdate

[pull]
	rebase = true

[push]
  default = current
  autoSetupRemote = true

# automatic maintenance
[maintenance]
	auto = false
  strategy = incremental

# [credential]
# helper = osxkeychain

[alias]
  l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  h = log --graph --decorate --abbrev-commit --date=relative --oneline --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)'
  ec = config --global -e
  undo = reset --soft HEAD^
  undom = reset --mixed HEAD^

[column]
	ui = auto

[diff]
  tool = vscode

[difftool "vscode"]
  cmd = code --wait --diff \"$LOCAL\" \"$REMOTE\"

[merge]
  tool = vscode
  log = true

[mergetool "vscode"]
  cmd = code --wait \"$MERGED\"
  trustExitCode = true

# [difftool "sourcetree"]
# 	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
# 	path =

# [mergetool "sourcetree"]
# 	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
# 	trustExitCode = true

[commit]
  template = /Users/mac/.stCommitMsg

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
